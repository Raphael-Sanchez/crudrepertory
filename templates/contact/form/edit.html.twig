{% extends 'base.html.twig' %}

{% block title %}Modification Contact{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s8 offset-s2">
                <br>
                <a class="waves-effect waves-light btn" href="{{ path('index') }}"><i class="material-icons left">arrow_back</i>Retour</a>
                <h4 class="center">Modification Contact</h4>
                {{ form_start(form, { attr: {novalidate: 'novalidate'}}) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.compagny) }}
                {{ form_row(form.email) }}
                <br>
                <button class="btn waves-effect waves-light right" type="submit" name="action">Valider<i class="material-icons right">send</i></button>
                {{ form_errors(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}